<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/icon_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:cropToPadding="false"
        android:adjustViewBounds="false"
        android:src="@drawable/m1" />

    <TextView
        android:id="@+id/num_capitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:text="Modulo 1"
        android:layout_alignTop="@+id/icon_img"
        android:layout_toRightOf="@+id/icon_img"
        android:layout_toEndOf="@+id/icon_img" />

    <TextView
        android:id="@+id/nombre_capitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="10sp"
        android:text="QuÃ© es la Diabetes?"
        android:layout_below="@+id/num_capitulo"
        android:layout_alignLeft="@+id/num_capitulo"
        android:layout_alignStart="@+id/num_capitulo"/>

</RelativeLayout>